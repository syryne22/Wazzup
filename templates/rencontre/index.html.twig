{% extends 'base.html.twig' %}

{% block title %}Rencontre index{% endblock %}

{% block body %}
    <h1>Rencontre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdRen</th>
                <th>TypeRencontre</th>
                <th>UrlInvitation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rencontre in rencontres %}
            <tr>
                <td>{{ rencontre.idRen }}</td>
                <td>{{ rencontre.typeRencontre }}</td>
                <td>{{ rencontre.urlInvitation }}</td>
                <td>
                    <a href="{{ path('app_rencontre_show', {'idRen': rencontre.idRen}) }}">show</a>
                    <a href="{{ path('app_rencontre_edit', {'idRen': rencontre.idRen}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rencontre_new') }}">Create new</a>
{% endblock %}
