                <td>{{ salle_cinema.idSalle }}</td>
                <td>{{ salle_cinema.nomSalle }}</td>
                <td>{{ salle_cinema.urlFilm }}</td>
                <td>{{ salle_cinema.urlSalle }}</td>
                <td>{{ salle_cinema.chat }}</td>
                <td>
                    <a href="{{ path('app_salle_cinema_show', {'idSalle': salle_cinema.idSalle}) }}">show</a>
