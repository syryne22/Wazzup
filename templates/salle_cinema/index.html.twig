{% extends 'base.html.twig' %}

{% block title %}SalleCinema index{% endblock %}

{% block body %}
    <h1>SalleCinema index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdSalle</th>
                <th>NomSalle</th>
                <th>UrlFilm</th>
                <th>UrlSalle</th>
                <th>Chat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle_cinema in salle_cinemas %}
